<script>
    document.getElementById("wifiForm").addEventListener("submit", function(e) {
        const password = document.getElementById("password").value.trim();
        if (!password) {
            alert("请输入密码");
            e.preventDefault();
            return;
        }
        if (password.length < 8) {
            alert("密码至少8位");
            e.preventDefault();
            return;
        }
    });
</script>
